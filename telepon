  <script>
    function append(value) {
      const out = document.getElementById("output");
      const addContact = document.querySelector(".add-contact");
  
      out.textContent = (out.textContent === "‎") ? value : out.textContent + value;
  
      if (out.textContent !== "‎") {
        addContact.style.display = "block";
      }
    }
  
    function backspace() {
      const out = document.getElementById("output");
      const addContact = document.querySelector(".add-contact");
  
      out.textContent = out.textContent.slice(0, -1) || "‎";
  
      if (out.textContent === "‎") {
        addContact.style.display = "none";
      }
    }
  
    // Sembunyikan "Tambah Nomor" saat awal
    window.onload = function() {
      document.querySelector(".add-contact").style.display = "none";
    }
  </script>
  
